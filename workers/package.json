{
  "name": "accordandharmony-workers",
  "version": "2.0.0",
  "description": "Cloudflare Workers backend for Accord and Harmony Foundation - Digital Product Sales & Authentication",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "migrate": "./migrate.sh",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:create": "wrangler d1 create accordharmony-db-dev",
    "db:migrate": "wrangler d1 execute accordharmony-db-dev --file=./schema.sql",
    "db:migrate:prod": "wrangler d1 execute accordharmony-db-prod --file=./schema.sql --env production"
  },
  "keywords": ["cloudflare", "workers", "serverless", "stripe", "authentication", "pdf", "ecommerce"],
  "author": "Accord and Harmony Foundation",
  "license": "ISC",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "wrangler": "^3.22.0",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0"
  }
}
